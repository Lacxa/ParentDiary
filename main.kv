ScreenManager
    id:manager
    MDScreen:
        name:"info"
        MDBoxLayout:
            orientation: "vertical"
            MDTopAppBar:
                title: "app.name"
                specific_text_color:83 / 225, 186 / 225, 115 / 225, 1
                md_bg_color:1, 1, 1, 1
                pos_hint:{'center_x':.5, 'center_y':.95}

            MDTabs:
                allow_stretch:False
                background_color:1, 1, 1, 1
                indicator_color:36/255, 146/255, 255/255, 1
                tab_hint_x:True
                text_color_active:78/255, 82/255, 84/255, 1
                text_color_normal:.5, .5, .5,

                Tab:
                    title: "Attendance"
                    FloatLayout:


                Tab:
                    title:"Homework"
                    FloatLayout:


                Tab:
                    title:"Results"
                    FloatLayout:



    MDScreen:
        name:"home"
        FloatLayout:
            MDLabel:
                bold:True
                text:'Search Student'
                halign:"center"
                font_style:'H6'
                pos_hint:{'center_x':.5, 'center_y':.9}
                theme_text_color: "Custom"
                text_color: 83 / 225, 186 / 225, 115 / 225, 1
                height: self.texture_size[1]
                width: self.texture_size[1]
            MDTextField:
                id:cls
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .6, .1
                pos_hint:{'center_x':.5, 'center_y':.8}
                hint_text:"Class: eg.class3"
                text_color: 0, 0, 0, 1
                font_size: dp(15)
            MDTextField:
                id:idd
                mode: "rectangle"
                fill_color: 0, 0, 0, .4
                size_hint: .6, .1
                pos_hint:{'center_x':.5, 'center_y':.67}
                hint_text:"Student ID:"
                text_color: 0, 0, 0, 1
                font_size: dp(15)

            MDFillRoundFlatButton:
                text: "Search"
                size_hint: .2, .06
                pos_hint:{'center_x':.5, 'center_y':.55}
                md_bg_color: 83 / 225, 186 / 225, 115 / 225, 1
                on_release:
                    app.student(cls.text, idd.text)

